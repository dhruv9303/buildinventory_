package com.example.buildinventory

import android.content.Intent
import android.os.Bundle
import android.view.animation.AnimationUtils
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity
import androidx.cardview.widget.CardView
import com.google.android.material.bottomnavigation.BottomNavigationView

class HomeActivity : AppCompatActivity() {

    lateinit var cardAddMaterial: CardView
    lateinit var cardUsage: CardView
    lateinit var cardReport: CardView
    lateinit var cardWorker: CardView

    lateinit var bottomNav: BottomNavigationView

    override fun onCreate(savedInstanceState: Bundle?) {

        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_home)


        // CARD LINK

        cardAddMaterial = findViewById(R.id.cardAddMaterial)
        cardUsage = findViewById(R.id.cardUsage)
        cardReport = findViewById(R.id.cardReport)
        cardWorker = findViewById(R.id.cardWorker)


        // BOTTOM NAV LINK

        bottomNav = findViewById(R.id.bottomNavigation)


        // Animation

        val clickAnim = AnimationUtils.loadAnimation(this, R.anim.btn_click_scale)


        // -----------------------------
        // CARD CLICK EVENTS
        // -----------------------------


        cardAddMaterial.setOnClickListener {

            it.startAnimation(clickAnim)

            Toast.makeText(this, "Add Material Clicked", Toast.LENGTH_SHORT).show()

            startActivity(Intent(this, AddMaterialActivity::class.java))

        }


        cardUsage.setOnClickListener {

            it.startAnimation(clickAnim)

            Toast.makeText(this, "Daily Usage Clicked", Toast.LENGTH_SHORT).show()

            startActivity(Intent(this, UsageActivity::class.java))

        }


        cardReport.setOnClickListener {

            it.startAnimation(clickAnim)

            Toast.makeText(this, "Report Clicked", Toast.LENGTH_SHORT).show()

            startActivity(Intent(this, ReportActivity::class.java))

        }


        cardWorker.setOnClickListener {

            it.startAnimation(clickAnim)

            Toast.makeText(this, "Worker Clicked", Toast.LENGTH_SHORT).show()

            startActivity(Intent(this, WorkerActivity::class.java))

        }



        // -----------------------------
        // BOTTOM NAVIGATION
        // -----------------------------


        bottomNav.selectedItemId = R.id.nav_dashboard


        bottomNav.setOnItemSelectedListener {

            when (it.itemId) {

                R.id.nav_dashboard -> {

                    true

                }

                R.id.nav_material -> {

                    startActivity(Intent(this, MaterialActivity::class.java))

                    true

                }

                R.id.nav_reports -> {

                    startActivity(Intent(this, ReportActivity::class.java))

                    true

                }

                R.id.nav_profile -> {

                    startActivity(Intent(this, ProfileActivity::class.java))

                    true

                }

                else -> false

            }

        }

    }

}
