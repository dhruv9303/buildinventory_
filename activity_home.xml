<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- SCROLL CONTENT -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation">



        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <!-- HEADER WITH PROFILE + NOTIFICATION -->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <!-- PROFILE IMAGE -->


                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_person_24"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"
                    android:padding="3dp"/>



                <!-- TEXT -->


                <LinearLayout
                    android:layout_toEndOf="@id/imgProfile"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back,"
                        android:textColor="#5D5656"
                        android:textSize="16sp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Site Manager"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="24sp"/>


                </LinearLayout>




                <!-- NOTIFICATION ICON -->


                <FrameLayout
                    android:id="@+id/notificationBtn"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_notifications_24"
                        app:tint="#474242"/>


                </FrameLayout>


            </RelativeLayout>



            <View
                android:layout_height="20dp"
                android:layout_width="match_parent"/>




            <!-- STATS -->


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">


                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:src="@drawable/baseline_build_24"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:tint="#FF9800"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVE PROJECTS"
                            android:textStyle="bold"
                            android:textSize="12sp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">


                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PENDING ISSUES"
                            android:textStyle="bold"
                            android:textSize="12sp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#F44336"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>



        <!-- QUICK ACTIONS -->


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="QUICK ACTIONS"
            android:textColor="#595050"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>




        <GridLayout
            android:columnCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <!-- ADD MATERIAL -->


            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddMaterial"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#FF9800">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:src="@drawable/baseline_add_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="#FFFFFF" />


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Add Material"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <!-- DAILY USAGE -->


            <androidx.cardview.widget.CardView
                android:id="@+id/cardUsage"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:src="@drawable/baseline_build_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="#FF9800" />


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Daily Usage"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <!-- REPORT -->


            <androidx.cardview.widget.CardView
                android:id="@+id/cardReport"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:src="@drawable/analytics_bars_chart_svgrepo_com"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="#FF9800" />


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Reports"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <!-- WORKER -->


            <androidx.cardview.widget.CardView
                android:id="@+id/cardWorker"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:src="@drawable/baseline_groups_24"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="#FF9800" />


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Workers"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>



        <!-- RECENT LOG -->


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="RECENT LOGS"
            android:textColor="#4E4C4C"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Cement Added - 50 Bags"
                android:padding="20dp"
                android:textSize="16sp"/>


        </androidx.cardview.widget.CardView>



    </LinearLayout>


</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bottomNavigation"

        android:layout_width="match_parent"

        android:layout_height="80dp"

        android:layout_alignParentBottom="true"

        android:background="#FFFFFF"

        app:itemIconTint="@color/bottom_nav_color"

        app:itemTextColor="@color/bottom_nav_color"

        app:labelVisibilityMode="labeled"

        app:menu="@menu/bottom_menu"/>



</RelativeLayout>

